{
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true
    },
    "extends": ["eslint:recommended" , "plugin:react/all"],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "react/jsx-indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "react/jsx-filename-extension": [
            1,
            { "extensions": [".js", ".jsx"] }
        ],
        "react/prop-types": ["off"],
        "react/jsx-handler-names": ["off"],
        "react/no-multi-comp": ["off"],
        "react/no-danger": ["off"],
        "react/no-set-state": ["off"]
    }
}